<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme extensions -->
    <style name="Theme.ZeroXQR.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom button styles -->
    <style name="Widget.ZeroXQR.Button" parent="Widget.Material3.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.ZeroXQR.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Custom text input styles -->
    <style name="Widget.ZeroXQR.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Custom card styles -->
    <style name="Widget.ZeroXQR.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
    </style>
</resources>